generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String
  columnId    String?
  column      Column? @relation(fields: [columnId], references: [id])
  tags        String[]
}

model Column {
  id      String  @id @default(uuid())
  name    String
  boardId String?
  Board   Board?  @relation(fields: [boardId], references: [id])
  tasks   Task[]
}

model Board {
  id      String   @id @default(uuid())
  name    String
  columns Column[]
}
